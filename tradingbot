import requests
import os
import pandas as pd
import robin_stocks.robinhood as rs
from datetime import timedelta, datetime
import datetime as dt
import time
from time import sleep

#Fetch User and Pass

robinuser= os.environ.get("robinhood_username")
robinpass= os.environ.get("robinhood_password")

#Robinhood login
def login():
    rs.login(username=robinuser,
         password=robinpass,
         expiresIn=86400,
         by_sms=True)

#Robinhood Logout
def logout():
    rs.authentication.logout()

def get_stocks():
    stocks = list()
    stocks.append('AAPL', 'TSLA', 'NVDA')
    return (stocks)

def market_open():
    market = False
    time_now = dt.datetime.now().time()

    mark_open = dt.time(8,30,0)
    mark_close = dt.time(14,59,0)

    if time_now > mark_open and time_now < mark_close:
        market = True
    else:
        print("Market is closed")
    return(market)

login()
market_open()



